---
import { getI18N } from "@/i18n";

const  { currentLocale = 'en' } = Astro
const i18n = getI18N({currentLocale});
---

<section class="text-black bg-[#e6a6ce] py-12 body-font w-full">
  <h2 class="text-2xl font-bold  text-center">{i18n?.testimonial.title}</h2>
    <div class="container px-5 py-16 mx-auto">
      <div class="flex flex-wrap -m-4">
        <div class="lg:w-1/3 lg:mb-0 mb-6 p-4">
          <div class="h-full text-center">
            <img alt="testimonial" class="w-20 h-20 mb-8 object-cover object-center rounded-full inline-block border-2 border-gray-800 bg-gray-800 bg-opacity-10" src="https://randomuser.me/api/portraits/women/14.jpg">
            <p class="leading-relaxed mb-5">{i18n?.testimonial.text}</p>
            <span class="inline-block h-1 w-10 rounded bg-[#fbd12d] mt-6 mb-4 lg:mt-14"></span>
            <h2 class="text-black font-medium title-font tracking-wider text-sm">Maria G., Homeowner</h2>
            <p class="text-gray-500">{i18n?.testimonial.occupation}</p>
          </div>
        </div>
        <div class="lg:w-1/3 lg:mb-0 mb-6 p-4">
          <div class="h-full text-center">
            <img alt="testimonial" class="w-20 h-20 mb-8 object-cover object-center rounded-full inline-block border-2 border-gray-800 bg-gray-800 bg-opacity-10" src="https://randomuser.me/api/portraits/men/48.jpg">
            <p class="leading-relaxed mb-5">{i18n?.testimonial.text}2</p>
            <span class="inline-block h-1 w-10 rounded bg-[#fbd12d] mt-6 lg:mt-14 mb-4"></span>
            <h2 class="text-black font-medium title-font tracking-wider text-sm">Luis R., Office Manager</h2>
            <p class="text-gray-500">{i18n?.testimonial.occupation2}</p>
          </div>
          
        </div>
        <div class="lg:w-1/3 lg:mb-0 p-4">
          <div class="h-full text-center">
            <img alt="testimonial" class="w-20 h-20 mb-8 object-cover object-center rounded-full inline-block border-2 border-gray-800 bg-gray-800 bg-opacity-10" src="https://randomuser.me/api/portraits/women/8.jpg">
            <p class="leading-relaxed">{i18n?.testimonial.text3}</p>
            <span class="inline-block h-1 w-10 rounded bg-[#fbd12d] mt-6 mb-4"></span>
            <h2 class="text-black font-medium title-font tracking-wider text-sm">Andrea S., Homeowner</h2>
            <p class="text-gray-500">{i18n?.testimonial.occupation3}</p>
          </div>
        </div>
      </div>
    </div>
  </section>